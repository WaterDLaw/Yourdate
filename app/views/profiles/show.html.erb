<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col s12 m12 l12">

    <div class="container">

      <div class='row'>

        <div class='col s12'>
        </div>
      </div>
      <div class="col s12 m3 l3">

        <div class="card">
          <div class="card-image">
            <div class="profile-image-wrapper">
              <%= has_profile_picture(@profile_picture)%>
            </div>
            <div class="card-content">

              <!-- like / unlike buttons -->
              <% if current_user.liked? @profile %>
                <center><a href="<%= unlike_profile_path(@profile.id)%>"id="likeButton" class="btn waves-effect waves-light"><i class="large material-icons left" style="color:#ef5350">favorite</i>Unlike</a></center>
              <% else %>
                <center><a href="<%= like_profile_path(@profile.id)%>"id="likeButton" class="btn waves-effect waves-light"><i class="large material-icons left" style="color:#ef5350">favorite</i>Like</a></center>
              <% end %>

              <center><h5>Personal Information</h5></center>

              <table class="no-spacing"cellspacing="0">

                <tr>
                  <td>Nickname:</td>
                  <td><%=@profile.nickname %></td>
                </tr>
                <tr>
                  <td>Firsname:</td>
                  <td><%=@profile.firstname %></td>
                </tr>

                <tr>
                  <td>Lastname:</td>
                  <td><%= @profile.lastname %></td>
                </tr>
                <tr>
                  <td>Age:</td>
                  <td><%= @profile.age %></td>
                </tr>
                <tr>
                  <td>Gender:</td>
                  <td><%= @profile.gender %></td>
                </tr>
                <tr>
                  <td>Height:</td>
                  <td><%= @profile.height %></td>
                </tr>
                <tr>
                  <td>Weight:</td>
                  <td><%= @profile.weight %></td>
                </tr>
                <tr>
                  <td>Hair color:</td>
                  <td><%= @profile.hair_color %></td>
                </tr>
                <tr>
                  <td>Eye color:</td>
                  <td><%= @profile.eye_color %></td>
                </tr>
                <tr>
                  <td>Ethnicity:</td>
                  <td><%= @profile.ethnic %></td>
                </tr>

              </table>
              <center><h5>Other Information</h5></center>
              <table class="no-spacing">
                <tr>
                  <td>Education:</td>
                  <td><%=@profile.education %></td>
                </tr>
                <tr>
                  <td>Occupation:</td>
                  <td><%=@profile.profession %></td>
                </tr>
                <tr>
                  <td>Religion:</td>
                  <td><%=@profile.religion %></td>
                </tr>
                <tr>
                  <td>Smoking:</td>
                  <td><%= @profile.smoking %></td>
                </tr>
                <tr>
                  <td>Drinking:</td>
                  <td><%= @profile.drinking %></td>
                </tr>
              </table>
            </div>
          </div>
        </div>
      </div>

        <div class="col s12 m9 l9">
          <% if @conversation.nil? %>
            <%= render :template => "personal_messages/new" %>
          <% else %>
            <%= render :template => "conversations/show"%>
          <% end %>
        </div>



        <div class="gallery col s12 m9 l9">

          <div class="masonry">
          <% @profile.user.gallery.photographs.each do |photo| %>
            <div class="masonry-item">
                 <i class="masonry-item-icon small material-icons" style="color:#ef5350">add_circle</i>
                 <%= image_tag(photo.image_url.to_s , class:"fit-image responsive-img", photoId: photo.id) %>
            </div>
          <% end %>
        </div>
        </div>


    </div>
  </div>

</div>


<%= link_to 'Edit', edit_profile_path(@profile) %> |
<%= link_to 'Back', profiles_path %>
