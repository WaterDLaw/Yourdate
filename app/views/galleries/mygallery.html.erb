<div class="row">
  <div class="col s12">
    <div class="col s2"></div>
    <div class="col s8">
        <%= render 'photographs/form', photograph: @photograph, gallery: @gallery %>
    </div>
    <div class="col s2"></div>
</div>
<div class="col s12">
    <div class="col s2"></div>
    <div class="col s8">


      <div class="masonry-gallery">
        <% @gallery.photographs.each do |photo| %>
          <div class="masonry-gallery-item">

              <%= image_tag photo.image_url.to_s , class:"fit-image" %>

              <%= link_to photograph_path(photo), class:"btn-floating masonry-item-icon red", method: :delete, data: { confirm: 'Are you sure?' } do %>
                <i class="material-icons" style="color:#FFF">delete</i>
              <% end %>
          </div>

        <% end %>
      </div>


    </div>
    <div class="col s2">

    </div>
  </div>
</div>
