
<!-- Create Messages -->
<div class="row message-wrapper">

    <%= form_for @personal_message do |f| %>
      <%= hidden_field_tag 'conversation_id', @conversation.id %>
        <div class="col s10">
        <div class="input-field">
          <i class="material-icons prefix">mode_edit</i>
          <label for="body">Message</label>
          <%= f.text_area :body, class:"materialize-textarea message-box" %>
        </div>
      </div>

        <div class="col s2" >
          <div class="input-field">
            <button class="btn waves-effect waves-light" type="submit" name="action">Send</button>
          </div>
        </div>
    <% end %>

</div>

<!-- Conversation -->
<div class="row">
  <div class="col s12">
      <ul class="collection">
        <%= render @conversation.personal_messages.limit(1) %>
        <div id="all_messages" style="display:none;">
          <%= render @conversation.personal_messages.offset(2) %>
        </div>
      </ul>
      <center><button id="show_more_messages" class="btn waves-effect waves-light">More</button></center>
  </div>
</div>
