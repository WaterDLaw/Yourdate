<!-- Row spacing -->
<div class='row'>
  <div class='col s12'>
  </div>
</div>

<div class="row">
  <div class="col s12">
    <div class="row">
      <div class="col s2"></div>
      <div class="col s8">
        <%= form_for @personal_message do |f| %>
          <%= hidden_field_tag 'conversation_id', @conversation.id %>
          <div class="row">
            <div class="input-field col s10">
              <i class="material-icons prefix">mode_edit</i>
              <label for="body">Message</label>
              <%= f.text_area :body, class:"materialize-textarea" %>
            </div>
            <div class="input-field col s2">
              <%= f.submit "Send", class:"btn waves-effect waves-light" %>
            </div>
          </div>

        <% end %>
      </div>
      <div class="col s2"></div>
    </div>
  </div>

  <div class="col s12">
    <div class="col s2"></div>
    <div class="col s8">
      <ul class="collection">
        <%= render @conversation.personal_messages %>

      </ul>
    </div>
    <div class="col s2"></div>
  </div>
</div>
