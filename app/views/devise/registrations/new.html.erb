<center>
  <div class="row">
    <div class="col s4"></div>
    <div class="col s4">
      <div class="card">
        <span class="card-title">Signup</span>
        <div class="card-content">
          <div class="container">
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "col s12") do |f| %>
                <div class='row'>
                  <div class='col s12'>
                  </div>
                </div>
                <%= devise_error_messages! %>
                <div class='row'>
                  <div class="input-field col s12">

                    <%= f.email_field :email, autofocus: true, class: "validate", type: "text" %>
                    <label for="email">Email</label>
                  </div>
                </div>
                <div class='row'>
                  <div class="input-field col s12">
                    <%= f.password_field :password, autocomplete: "off" %>
                    <label for="password">Password</label>
                  </div>
                </div>
                <div class='row'>
                  <div class="input-field col s12">

                    <%= f.password_field :password_confirmation, autocomplete: "off", type:"text" %>
                    <label for="password_confirmation">Password confirmation</label>
                  </div>
                </div>
                <center>
                  <div class='row'>
                    <div class="actions">
                      <%= f.submit "Sign up", class:"btn waves-effect waves-light" %>
                    </div>
                  </div>
              </center>
              <% end %>
            </div>
          </div>
        </div>
      </center>
    </div>
    <div class="col s4"></div>
</div>
<%= render "devise/shared/links" %>
