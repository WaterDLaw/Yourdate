
  <div class="row">
    <div class="col s4"></div>
    <div class="col s4">
      <div class="card">
        <center
          <span class="card-title">Login</span>
        </center>
        <div class="card-content">
          <div class="container">
              <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "col s12") do |f| %>
                <div class='row'>
                  <div class='col s12'>
                  </div>
                </div>
                <%= devise_error_messages! %>
                <div class='row'>
                  <div class="input-field col s12">

                    <%= f.email_field :email, autofocus: true, class: "validate", type: "text" %>
                    <label for="email">Email</label>
                  </div>
                </div>
                <div class='row'>
                  <div class="input-field col s12">
                    <%= f.password_field :password, autocomplete: "off" %>
                    <label for="password">Password</label>
                  </div>
                </div>
                <center>
                  <div class="row">
                  <% if devise_mapping.rememberable? -%>
                    <div class="input-field">
                      <%= f.check_box :remember_me %>
                      <%= f.label :remember_me %>
                    </div>
                  <% end -%>
                </div>
              </center>
                <center>
                  <div class='row'>
                    <div class="actions">
                      <%= f.submit "Log in", class:"btn waves-effect waves-light" %>
                    </div>
                  </div>
              </center>
              <% end %>
            </div>
          </div>
        </div>
    </div>
    <div class="col s4"></div>
</div>
<center> <%= link_to "Sign up", new_registration_path(resource_name) %><br /> </center>
